<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="buttonStyle" parent="Widget.AppCompat.Button">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/ui_button_pressed</item>
        <item name="android:padding">10dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/comicbold</item>
    </style>

    <style name="buttonAccentStyle" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:background">@drawable/ui_button_accent</item>
        <item name="android:padding">10dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/comicbold</item>
    </style>

    <style name="buttonYellowStyle" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:padding">10dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/comicbold</item>
    </style>

    <style name="imageButtonStyle" parent="Widget.AppCompat.ImageButton">
        <item name="android:background">@drawable/ui_button_square_pressed</item>
    </style>

    <style name="textviewStyle" parent="Widget.AppCompat.TextView">
        <item name="android:background">@drawable/bg_textview</item>
        <item name="android:fontFamily">@font/comicbold</item>
        <item name="android:paddingStart">@dimen/marginContent</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:paddingEnd">@dimen/marginContent</item>
        <item name="android:textSize">@dimen/body1</item>
    </style>

    <style name="textviewYellowStyle" parent="Widget.AppCompat.TextView">
        <item name="android:background">@drawable/bg_textview_yellow</item>
        <item name="android:fontFamily">@font/comicbold</item>
        <item name="android:paddingStart">@dimen/marginContent</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:paddingEnd">@dimen/marginContent</item>
        <item name="android:textSize">@dimen/body1</item>
    </style>

    <style name="ratingKesempatan" parent="Widget.AppCompat.RatingBar">
        <item name="android:progressDrawable">@drawable/rating_kesempatan</item>
        <item name="android:maxHeight">28dp</item>
        <item name="android:minHeight">28dp</item>
    </style>

    <style name="radioStyle" parent="Widget.AppCompat.CompoundButton.RadioButton">
        <item name="android:fontFamily">@font/comicregular</item>
        <item name="android:button">@null</item>
        <item name="android:textColor">@drawable/text_color_checked</item>
        <item name="android:background">@drawable/radio_checked</item>
    </style>
</resources>